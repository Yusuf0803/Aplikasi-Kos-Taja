<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary_300">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/header1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_panah_edadmin"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="1dp"
                    android:background="@drawable/panah"></TextView>

                <TextView
                    android:id="@+id/judul"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="Edit Profil"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </TextView>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relative_profil"
                android:layout_below="@id/header1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:id="@+id/iv_gambar_edadmin"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/kostaja">

                    </ImageView>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_UpFto_edadmin"
                    android:layout_below="@+id/cardview"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Uploa Foto"
                    android:textSize="10dp"
                    android:textColor="@color/black"
                    android:gravity="center">

                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@id/relative_profil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Lengkap"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:textColor="@color/black">
                </TextView>

                <EditText
                    android:id="@+id/ed_nama_edadmin"
                    android:layout_below="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:hint="Nama Lengkap"
                    android:textSize="12dp"
                    android:inputType="textPersonName"
                    android:paddingLeft="15dp"
                    android:textColorHint="@color/black"
                    android:background="@drawable/background_ed">
                </EditText>

                <TextView
                    android:id="@+id/text2"
                    android:layout_below="@+id/ed_nama_edadmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Email"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:textColor="@color/black">

                </TextView>

                <EditText
                    android:id="@+id/ed_email_edadmin"
                    android:layout_below="@id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/background_ed"
                    android:hint="Email"
                    android:paddingLeft="15dp"
                    android:textColorHint="@color/black"
                    android:textSize="12dp"
                    app:counterTextColor="@color/black"
                    android:inputType="textEmailAddress">

                </EditText>

                <TextView
                    android:id="@+id/text3"
                    android:layout_below="@+id/ed_email_edadmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Nomor Handphone"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:textColor="@color/black">

                </TextView>

                <EditText
                    android:id="@+id/ed_nohp_edadmin"
                    android:layout_below="@id/text3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/background_ed"
                    android:hint="Nomor Handphone"
                    android:paddingLeft="15dp"
                    android:textColorHint="@color/black"
                    android:textSize="12dp"
                    app:counterTextColor="@color/black"
                    android:inputType="textEmailAddress">

                </EditText>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_simpan_edadmin"
                    android:layout_below="@id/ed_nohp_edadmin"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:hint="Simpan"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:background="@drawable/border_shape">

                </androidx.appcompat.widget.AppCompatButton>


            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>