<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/header1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="start"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/panah_signup"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="1dp"
                    android:background="@drawable/panah"></TextView>


                <TextView
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="Registrasi Akun"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/header2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header1"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header2"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="30dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/gambar"
                            android:layout_width="160dp"
                            android:layout_height="80dp"
                            android:background="@drawable/kostaja_logo"></ImageView>

                    </LinearLayout>


                    <TextView
                        android:id="@+id/type_head"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:text="Daftar Sebagai"
                        android:fontFamily="serif">

                    </TextView>

                    <Spinner
                        android:id="@+id/tipe_user"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="4dp"
                        android:entries="@array/ListUser"
                        android:paddingLeft="5dp"
                        android:background="@drawable/background_ed">
                    </Spinner>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="serif"
                        android:text="Nama Lengkap"
                        android:textColor="@color/black"
                        android:textStyle="bold">

                    </TextView>

                    <EditText
                        android:id="@+id/Nama_Signup"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/background_ed"
                        android:hint="Nama Lengkap"
                        android:paddingLeft="15dp"
                        android:textColorHint="@color/black"
                        android:textSize="12dp"
                        app:counterTextColor="@color/black"
                        android:inputType="textPersonName">

                    </EditText>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:text="Nomor Handphone"
                        android:fontFamily="serif"
                        android:textStyle="bold"
                        android:textColor="@color/black">

                    </TextView>

                    <EditText
                        android:id="@+id/Nohp_Signup"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/background_ed"
                        android:hint="Nomor Handphone"
                        android:paddingLeft="15dp"
                        android:textColorHint="@color/black"
                        android:textSize="12dp"
                        app:counterTextColor="@color/black"
                        android:inputType="phone">

                    </EditText>



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:text="Email"
                        android:fontFamily="serif"
                        android:textStyle="bold"
                        android:textColor="@color/black">

                    </TextView>

                    <EditText
                        android:id="@+id/Email_Signup"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/background_ed"
                        android:hint="Email"
                        android:paddingLeft="15dp"
                        android:textColorHint="@color/black"
                        android:textSize="12dp"
                        app:counterTextColor="@color/black"
                        android:inputType="textEmailAddress">

                    </EditText>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:text="Password"
                        android:fontFamily="serif"
                        android:textStyle="bold"
                        android:textColor="@color/black">

                    </TextView>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/Pass0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        app:boxBackgroundMode="none"
                        app:hintEnabled="false"
                        app:passwordToggleEnabled="true">

                        <EditText
                            android:id="@+id/Password_Signup"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/background_ed"
                            android:hint="Password"
                            android:inputType="textPassword"
                            android:longClickable="false"
                            android:padding="0dp"
                            android:textColorHint="@color/black"
                            android:textSize="12dp"
                            app:counterTextColor="@color/black"></EditText>

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:text="Ulangi Password"
                        android:fontFamily="serif"
                        android:textStyle="bold"
                        android:textColor="@color/black">

                    </TextView>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/Pass1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        app:boxBackgroundMode="none"
                        app:hintEnabled="false"
                        app:passwordToggleEnabled="true">

                        <EditText
                            android:id="@+id/Re_Password_Signup"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/background_ed"
                            android:hint="Ulangi Password"
                            android:inputType="textPassword"
                            android:longClickable="false"
                            android:padding="0dp"
                            android:paddingLeft="10dp"
                            android:textColorHint="@color/black"
                            android:textSize="12dp"
                            app:counterTextColor="@color/black"></EditText>

                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/Btn_Signup"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/button_shape"
                        android:hint="Daftar"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="20dp">

                    </androidx.appcompat.widget.AppCompatButton>

                    <LinearLayout
                        android:id="@+id/ket1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sudah punya akun Kos Taja?"
                            android:textColor="@color/black"
                            android:textSize="10dp"
                            android:textStyle="normal">

                        </TextView>

                        <TextView
                            android:id="@+id/Masuk_Signup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:text="Masuk di sini"
                            android:textColor="@color/biru"
                            android:textSize="10dp"
                            android:textStyle="normal">

                        </TextView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ProgressBar
            android:id="@+id/Progressbar_Signup"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginStart="2pt"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/white">
        </ProgressBar>
    </LinearLayout>
</RelativeLayout>